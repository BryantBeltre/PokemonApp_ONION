@using Pokemons.Core.Application.ViewModel.Region
@model SaveRegion
@{
    ViewData["Title"] = "Delete";
}

<div class="col-6 offset-3">
    <div class="card-header bg-danger text-light">
        <h4>¿Esta seguro que quiere eliminar la region @Model.Name?</h4>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Region" asp-action="DeletePost">
            
            <input type="hidden" asp-for="Id"/>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-controller="Region" asp-action="Index" class="btn btn-warning">Cancelar</a>

        </form>
    </div>
</div>

