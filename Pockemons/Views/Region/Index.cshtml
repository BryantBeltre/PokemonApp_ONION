@using Pokemons.Core.Application.ViewModel.Pokemones
@model List<RegionViewModel>
@{
    ViewData["Title"] = "Regions";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="Region" asp-action="Create"  class="btn btn-outline-success">Create Region</a>
        </div>
    </div>


    <div class="row">
            @if (Model == null || Model.Count == 0)
            {
                <h3>No hay Regiones Registradas</h3>
            }
            else
            {
                           
                <div class="row align-items-center">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        @foreach (RegionViewModel item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>
                                        <a  asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                        <a  asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-primary">Edit</a>
                                    </td>
                                </tr>
                            </tbody>
                        
                        }
                    </table>
                </div>

            }
    </div>
</div>

